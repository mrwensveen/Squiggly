{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "import/extensions" : "off",
        "linebreak-style" : "off",
        "no-use-before-define": ["error", "nofunc"],
        "no-param-reassign": ["error", { "props": false }],
        "object-curly-newline" : "off",
        "no-plusplus" : "off",
        "no-continue" : "off"
    }
}
